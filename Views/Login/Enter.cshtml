@{
    ViewBag.Title = "Enter";
}

<h2>Log On</h2>
<p>
    Please enter your username and password. @Html.ActionLink("Register", "Registration") if you don't have an account.
</p>

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Sign in to application</legend>

            <div class="editor-label">
                Email
            </div>
            <div class="editor-field">
               <input type="text" name="email" />
            </div>

            <div class="editor-label">
                Password
            </div>
            <div class="editor-field">
               <input type="password" name="password" />
            </div>

            <p>
                <input type="submit" value="Login" />
            </p>
            <p>@ViewBag.LoginError</p>
        </fieldset>
    </div>
}
